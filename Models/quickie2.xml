<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>quickie2.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Quickie/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>interieur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
    <object-name>ailesB</object-name>
    <object-name>ailesH</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>direction</object-name>
    <object-name>profondeurG</object-name>
    <object-name>profondeurD</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>roueA</object-name>
    <object-name>tourvitre</object-name>
    <object-name>echappe</object-name>
    <object-name>axeA</object-name>
    <object-name>axeB</object-name>
    <object-name>trous</object-name>

    <!-- Objets transparents -->
    <object-name>vitres</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
    <object-name>lampeG</object-name>
    <object-name>lampeD</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>glass_shader.png</texture>
    <object-name>vitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitres</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>lampeG</object-name>
    <object-name>lampeD</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>interieur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
    <object-name>ailesB</object-name>
    <object-name>ailesH</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>direction</object-name>
    <object-name>profondeurG</object-name>
    <object-name>profondeurD</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>roueA</object-name>
    <object-name>tourvitre</object-name>
    <object-name>echappe</object-name>
    <object-name>axeA</object-name>
    <object-name>axeB</object-name>
    <object-name>trous</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
<!--
    <diffuse>
      <red-prop>diffuse/red</red-prop>
      <green-prop>diffuse/green</green-prop>
      <blue-prop>diffuse/blue</blue-prop>
    </diffuse>

    <ambient>
      <red-prop>ambient/red</red-prop>
      <green-prop>ambient/green</green-prop>
      <blue-prop>ambient/blue</blue-prop>
    </ambient>
-->
    <specular>
      <red-prop>specular/red</red-prop>
      <green-prop>specular/green</green-prop>
      <blue-prop>specular/blue</blue-prop>
    </specular>

    <emission>
      <red-prop>emission/red</red-prop>
      <green-prop>emission/green</green-prop>
      <blue-prop>emission/blue</blue-prop>
    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <!-- Intérieur -->
  <model>
    <path>Aircraft/Quickie/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- L'hélice --> 
  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -2.830 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.012 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>controls/flight/rudder</property>
    <factor>30</factor>
    <axis>
      <x1-m> 2.486 </x1-m>
      <y1-m> 0.000 </y1-m>
      <z1-m> 0.006 </z1-m>
      <x2-m> 2.726 </x2-m>
      <y2-m> 0.000 </y2-m>
      <z2-m> 0.593 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeurG</object-name>
    <property>/controls/flight/elevator</property>
    <factor>20</factor>
    <axis>
      <x1-m> -1.671 </x1-m>
      <y1-m> -0.542 </y1-m>
      <z1-m> -0.330 </z1-m>
      <x2-m> -1.601 </x2-m>
      <y2-m> -2.304 </y2-m>
      <z2-m> -0.489 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>profondeurD</object-name>
    <property>/controls/flight/elevator</property>
    <factor>20.0</factor>
    <axis>
      <x1-m> -1.601 </x1-m>
      <y1-m>  2.304 </y1-m>
      <z1-m> -0.489 </z1-m>
      <x2-m> -1.671 </x2-m>
      <y2-m>  0.542 </y2-m>
      <z2-m> -0.330 </z2-m>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>20</factor>
    <axis>
      <x1-m>  0.048 </x1-m>
      <y1-m> -1.648 </y1-m>
      <z1-m>  0.425 </z1-m>
      <x2-m>  0.048 </x2-m>
      <y2-m> -0.435 </y2-m>
      <z2-m>  0.338 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>20</factor>
    <axis>
      <x1-m>  0.048 </x1-m>
      <y1-m>  0.435 </y1-m>
      <z1-m>  0.338 </z1-m>
      <x2-m>  0.048 </x2-m>
      <y2-m>  1.648 </y2-m>
      <z2-m>  0.425 </z2-m>
    </axis>
  </animation>

  <!-- Rotation de la roue arrière en fonction de la gouverne de direction -->
  <animation>
    <name>RouletteQueue</name>
    <object-name>roueA</object-name>
    <object-name>axeB</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RouletteQueue</object-name>
    <property>controls/flight/rudder</property>
    <factor> 20 </factor>
    <center>
      <x-m>  2.873 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.106 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.505 </x-m>
      <y-m> -2.452 </y-m>
      <z-m> -0.680 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.505 </x-m>
      <y-m>  2.452 </y-m>
      <z-m> -0.680 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  2.963 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.127 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Canopy -->
  <animation>
    <name>CanopeComplete</name>
    <object-name>tourvitre</object-name>
    <object-name>vitres</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>CanopeComplete</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>   0 </dep></entry>
      <entry><ind> 1 </ind><dep> -45 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.595 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.232 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Les lampes -->
  <model>
    <path>Aircraft/Quickie/Models/light/RedLight.xml</path>
    <offsets>
      <x-m> -0.139 </x-m>
      <y-m> -2.505 </y-m>
      <z-m>  0.494 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Quickie/Models/light/GreenLight.xml</path>
    <offsets>
      <x-m> -0.139 </x-m>
      <y-m>  2.505 </y-m>
      <z-m>  0.494 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Quickie/Models/light/StrobeWhite.xml</path>
    <offsets>
      <x-m> -0.159 </x-m>
      <y-m> -2.505 </y-m>
      <z-m>  0.494 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Quickie/Models/light/StrobeWhite.xml</path>
    <offsets>
      <x-m> -0.159 </x-m>
      <y-m>  2.505 </y-m>
      <z-m>  0.494 </z-m>
    </offsets>
  </model>

</PropertyList>

